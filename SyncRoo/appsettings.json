{
  "ConnectionStrings": {
    "Database": "Data Source=Data\\SyncRoo-Sqlite.db;Journal Mode=Off"
  },
  "Sync": {
    "FilStorageProvider": "Sqlite",
    "CommandTimeoutInSeconds": 86400,
    "FileBatchSize": 5000,
    "OperationDelayInMs": 10
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SyncRoo"
    }
  }
}